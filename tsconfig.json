{
  "include": ["src/**/*"],
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "@shared/*": ["../shared/*"]
    },
    "types": ["vite/client"],
    "jsx": "react-jsx",

    // ADD THESE ↓↓↓
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ES2020",
    "lib": ["ES2020", "DOM"]
  }
}
